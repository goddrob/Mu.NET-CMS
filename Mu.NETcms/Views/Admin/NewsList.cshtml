@model IEnumerable<Mu.NETcms.Models.NewsPost>
@{
    ViewBag.Title = "News List";
}
@section headscripts {

}
<div id="post_wrapper">
    <div id="header">
        <div class="info">
            <h2>News posts</h2>
            <div class="date_n_author">Add a new post or edit existing ones.</div>
        </div>
    </div>

    <div id="body">
        <p>@Html.ActionLink("Create new post!", "NewsCreate")</p>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Date</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var n in Model)
                {
                    <tr>
                        <td>@n.Title</td>
                        <td>@n.Author</td>
                        <td>@n.Date</td>
                        <td>@Html.ActionLink("Edit", "NewsEdit", new { id = n.Id })</td>
                        <td>@Html.ActionLink("Remove", "NewsDelete", new { id = n.Id })</td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
