@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "Error";
}
<div id="post_wrapper">
    <div id="header">
        <div class="info">
            <h2>Error</h2>
        </div>
    </div>
    <div id="body">
        @{
            if (String.IsNullOrEmpty(ViewBag.errorMessage))
            {
                <p>An error occurred while processing your request.</p>
            }
            else
            {
                <p>@ViewBag.errorMessage</p>
            }
        }
</div>
    </div>
