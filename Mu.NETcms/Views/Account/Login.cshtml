@using Mu.NETcms.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
@section headscripts {
    @Styles.Render("~/css/reset")
    @Styles.Render("~/css/login")
}
<div id="post_wrapper">
    <div id="header">
        <div class="info">
            <h2>Sign in with local account or other service</h2>
        </div>
    </div>
    <div id="body">
        
        <div id="loginwrapper">
            <div class="login-top">

                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "box login", role = "form" }))
                {
                                    <fieldset class="boxBody">
                                        
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            
                                        @Html.LabelFor(m => m.Email, new {  })
                                        @Html.TextBoxFor(m => m.Email, new { @tabindex = 1, @placeholder="you@email.com"})
                                            
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                
                                            
                                        @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                        @Html.ActionLink("Forgot password?", "ForgotPassword", null, new {@class="rlink", @tabindex="5" })*@
                                        <label>@Html.ActionLink("Forgot password?", "ForgotPassword", null, new { @class = "rLink", @tabindex = 5 })Password</label>
                                        @Html.PasswordFor(m => m.Password, new { @tabindex=2})
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                         
                                        
                                        @*<input type="submit" value="Log in" class="read_more2" />
                                        <div class="clear"></div><p></p>
                                        <i></i>@Html.LabelFor(m => m.RememberMe, new {@class = "checkbox"})
                                            @Html.CheckBoxFor(m => m.RememberMe, new { @tabindex=3 })
                                        
                                        <div class="forgot">
                                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                                            @Html.ActionLink("Register as a new user", "Register")
                                        </div>
                                        <div class="clear"></div>*@
                                        </fieldset>
                                    <footer>
                                        @*<label><input type="checkbox" tabindex="3">Keep me logged in</label>*@
                                        
                                        <input type="submit" class="btnLogin" value="Login" tabindex="4">
                                    </footer>
                                        }

</div>
            <div class="login-right">
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>
           </div>

        </div>
    </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
